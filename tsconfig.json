{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es2015"],
    "allowJs": true,
    "jsx": "react-native",
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./build",
    "strict": true,
    "strictPropertyInitialization": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "types": [
    "react",
    "react-native"
  ],
  "include": [
    "src/**/*",
    "typings/*"
  ],
  "exclude": [
    "index.js",
    "android",
    "ios",
    "build",
    "node_modules",
    "__tests__"
  ],
  "compileOnSave": false
}
